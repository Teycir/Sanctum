{
  "name": "sanctum",
  "version": "0.1.0",
  "private": true,
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx wrangler pages dev out",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:real": "NEXT_PUBLIC_USE_MOCK_IPFS=false playwright test --project=chromium",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "copy-timeseal": "node scripts/copy-timeseal.js",
    "db:setup": "./scripts/setup-db.sh",
    "db:migrate": "npx wrangler d1 execute sanctum-keys --file=./schema.sql",
    "db:migrate:remote": "npx wrangler d1 execute sanctum-keys --remote --file=./schema.sql",
    "db:reset": "npx wrangler d1 execute sanctum-keys --command='DROP TABLE IF EXISTS vault_keys; DROP TABLE IF EXISTS vault_access_log; DROP TABLE IF EXISTS banned_fingerprints;' && npm run db:migrate",
    "deploy": "npm run build && npx wrangler pages deploy out"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@noble/ciphers": "^1.0.0",
    "@noble/hashes": "^1.5.0",
    "@types/jszip": "^3.4.0",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "^15.1.0",
    "qrcode": "^1.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "secrets.js-34r7h": "^2.0.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.2",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.0",
    "happy-dom": "^20.0.11",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
